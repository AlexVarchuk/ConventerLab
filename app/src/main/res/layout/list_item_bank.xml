<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   style="@style/match_parent"
    android:layout_margin="10dp"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        style="@style/m_w"
        card_view:cardElevation="0dp"
        card_view:cardMaxElevation="0dp">

        <LinearLayout
            style="@style/match_parent"
            android:orientation="vertical"
            android:weightSum="1">
        <TextView
            android:id="@+id/tv_bank_LI"
            style="@style/m_w"
            android:padding="8dp"
            android:text="Альфа банк"
            android:textColor="@android:color/black"
            android:textSize="14pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_region_LI"
            style="@style/m_w"
            android:padding="8dp"
            android:text="Закарпатська область"
            android:textColor="@android:color/black"
            android:textSize="9pt" />

        <TextView
            android:id="@+id/tv_city_LI"
            style="@style/m_w"
            android:padding="8dp"
            android:text="Ужгород"
            android:textColor="@android:color/black"
            android:textSize="9pt" />

        <TextView
            android:id="@+id/tv_phone_LI"
            style="@style/m_w"
            android:gravity="right"
            android:padding="4dp"
            android:text="Tel:45645465"
            android:textColor="@android:color/black"
            android:textSize="6pt" />

        <TextView
            android:id="@+id/tv_address_LI"
            style="@style/m_w"
            android:gravity="right"
            android:padding="4dp"
            android:text="Address:Vul. Minajska"
            android:textColor="@android:color/black"
            android:textSize="6pt" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:background="@color/bottomButton"
            android:orientation="horizontal"
            android:padding="0dp">

            <ImageButton
                android:id="@+id/ib_link_LI"
                style="@style/ib_style"
                android:src="@drawable/ic_link" />

            <ImageButton
                android:id="@+id/ib_map_LI"
                style="@style/ib_style"
                android:src="@drawable/ic_map" />

            <ImageButton
                android:id="@+id/ib_phone_LI"
                style="@style/ib_style"
                android:src="@drawable/ic_phone" />

            <ImageButton
                android:id="@+id/ib_next_LI"
                style="@style/ib_style"
                android:src="@drawable/ic_next"/>


        </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>